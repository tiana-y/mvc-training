@model List<Product>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <table id="productTable" class="table table-bordered table-secondary">
        <thead>
            <tr class="table-light">
                <th>Title</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts {
   <script src="~/js/product.js"></script>
}