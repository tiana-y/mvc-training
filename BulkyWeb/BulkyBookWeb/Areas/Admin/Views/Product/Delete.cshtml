@model Product

<div class="container pt-5">
    <div class="card border-danger m-auto mb-3" style="max-width:600px">
        <div class="card-header text-center"><h3>Delete Product</h3></div>
        <div class="card-body">
            <div class="card-text">
                <form method="post">
                    <div class="mb-1 row p-1">
                        <label asp-for="Title"></label>
                        <input readonly asp-for="Title" type="text" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-1 mt-1 row p-1">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-1 row p-1">
                        <label asp-for="ISBN"></label>
                        <input readonly asp-for="ISBN" type="text" class="form-control" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                    <div class="mb-1 row p-1">
                        <label asp-for="Author"></label>
                        <input readonly asp-for="Author" type="text" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="mb-1 row p-1">
                        <label asp-for="ListPrice"></label>
                        <input readonly asp-for="ListPrice" type="number" class="form-control" />
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>
                    <div class="mb-1 row p-1">
                        <label asp-for="Price"></label>
                        <input readonly asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-1 row p-1">
                        <label asp-for="Price50"></label>
                        <input readonly asp-for="Price50" type="number" class="form-control" />
                        <span asp-validation-for="Price50" class="text-danger"></span>
                    </div>
                    <div class="mb-2 row p-1">
                        <label asp-for="Price100"></label>
                        <input readonly asp-for="Price100" type="number" class="form-control" />
                        <span asp-validation-for="Price100" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-primary form-control">Back to list</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}