@model Category

<div class="container pt-5">
    <div class="card border-danger m-auto mb-3" style="max-width:600px">
        <div class="card-header text-center"><h3>Delete Category</h3></div>
        <div class="card-body">
            <div class="card-text">
                <form method="post">
                    <input asp-for="Id" hidden />
                    <div class="mb-2 row p-2">
                        <label asp-for="Name"></label>
                        <input readonly asp-for="Name" type="text" class="form-control" />
                    </div>
                    <div class="mb-2 row p-2">
                        <label asp-for="DisplayOrder"></label>
                        <input readonly asp-for="DisplayOrder" type="number" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">Back to list</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>